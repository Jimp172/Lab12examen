<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Demo11B2023.Views.Operaciones">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Ingresar Valor 1"
                   Text="{Binding ValorA}"
                   ></Entry>
            <Entry Placeholder="Ingresar Valor 2"
                   Text="{Binding ValorB}"
                   ></Entry>
            <Button Text="Area"
                    Command="{Binding CalcularArea}"
                    />
            <Button Text="Perimetro"
                    Command="{Binding CalcularPerimetro}"
                    />
            <Label Text="Perímetro:"
                   FontSize="20"
                   Margin="0,20,0,0"
                   TextColor="Green"
                   HorizontalOptions="Center" />
            <Label Text="{Binding ResultadoPerimetro}"
                   FontSize="24"
                   HorizontalOptions="Center" />
            <Label Text="Area:"
                   FontSize="20"
                   Margin="0,20,0,0"
                   TextColor="Green"
                   HorizontalOptions="Center" />
            <Label Text="{Binding ResultadoArea}"
                   FontSize="24"
                   HorizontalOptions="Center" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>